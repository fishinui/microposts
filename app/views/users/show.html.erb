<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      
      <span><%= gravatar_for @user %><br clear="all"></span>

      <h1><%= @user.name %></h1>
      <span><label>e-mail</label><%= @user.email %></span>
      <span><label>timezone</label><%= @user.time_zone %></span>
      <span><label>comment</label><%= @user.comment %></span>

    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>

      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
      <%= render @microposts %>
      </ol>

    <% end %>
  </div>
</div>