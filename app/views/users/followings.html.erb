<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        
<%= gravatar_for @user %>

        
<%= @user.name %>

      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    
    <% if @followings.any? %>
     <h3>Followings</h3>
     <ol class="microposts">
      
      <% @followings.each do |f| %>
      
      <li>
      <%= f.name %><br>
      <%= f.email %><br>
      </li>

     <% end %>
     </ol>
    <% end %>
    
  </div>


