<%= link_to gravatar_for(current_user, size: 50), current_user %>
<h1><%= current_user.name %></h1>
<span><%= link_to "View my profile", current_user %></span>
<br>
<span><%= pluralize(current_user.microposts.count, "micropost") %></span>
<span><%= link_to pluralize(current_user.following_relationships.count, "followings"), followings_user_path(current_user) %></span>
<span><%= link_to pluralize(current_user.follower_relationships.count, "followers"), followers_user_path(current_user) %></span>
